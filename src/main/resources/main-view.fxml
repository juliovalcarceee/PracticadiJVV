<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.liceolapaz.dam.jvv.controller.MainController">

    <!-- TITULO -->
    <top>
        <Label text="DATOS DEL USUARIO"
               style="-fx-font-size: 22px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER"/>
    </top>

    <!-- DATOS USUARIO -->
    <center>
        <VBox spacing="15" alignment="CENTER">

            <HBox spacing="10">
                <Label text="Nombre:"/>
                <Label fx:id="lblNombre"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Usuario:"/>
                <Label fx:id="lblUsuario"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Tipo:"/>
                <Label fx:id="lblTipo"/>
            </HBox>

            <!-- BOTONES -->
            <HBox spacing="15" alignment="CENTER" style="-fx-padding: 20;">
                <Button text="Ver Equipos" onAction="#verEquipos"/>
                <Button text="Ver Jugadores" onAction="#verJugadores"/>
                <Button text="Salir" onAction="#salir"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>
